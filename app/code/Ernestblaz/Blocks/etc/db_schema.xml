<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="contact">
        <column xsi:type="int" name="id" padding="11" unsigned="true" nullable="false" identity="true" comment="Entity Id" />
        <column xsi:type="varchar" name="name" length="255" nullable="false" default="" comment="Name" />
        <column xsi:type="varchar" name="email" length="255" nullable="false" default="" comment="Email" />
        <column xsi:type="varchar" name="telephone" length="15" nullable="true" default="" comment="Phone Number" />
        <column xsi:type="text" name="comment" nullable="false" default="" comment="Comment" />
        <column xsi:type="varchar" name="country" length="255" nullable="true" default="" comment="Country" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
